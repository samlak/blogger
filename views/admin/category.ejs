<%- include('../partials/admin/header'); %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Category</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Category</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          
          <% if (messages.length > 0) { %>
            <div class="mx-5 col-lg-11 alert alert-warning alert-dismissible fade show" role="alert">
              <%= messages %>

              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>

          <div class="col-lg-6">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h5 class="m-0">Add Category</h5>
              </div>
              <div class="card-body">
                <form method="POST" action="">
                  <div class="form-group">
                    <label for="name">Category Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Football">
                  </div>
                  <button type="submit" class="btn btn-primary">Create Category</button>
                </form>
              </div>
            </div>
          </div>
          <!-- /.col-md-6 -->
          <div class="col-lg-6">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h5 class="m-0">List of Category</h5>
              </div>
              <div class="card-body">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Football 
                    <a href="/admin/category/1/edit" class="btn btn-secondary btn-sm ml-1">
                      <i class="nav-icon fas fa-pencil-alt"></i>
                    </a>
                    
                    <a href="/admin/category/1/delete" class="btn btn-danger btn-sm ml-1">
                      <i class="nav-icon fas fa-trash-alt"></i>
                    </a>
                  </li>
                  <li class="list-group-item">Politics
                    <a href="/admin/category/1/edit" class="btn btn-secondary btn-sm ml-1">
                      <i class="nav-icon fas fa-pencil-alt"></i>
                    </a>
                    
                    <a href="/admin/category/1/delete" class="btn btn-danger btn-sm ml-1">
                      <i class="nav-icon fas fa-trash-alt"></i>
                    </a>
                  </li>
                  <li class="list-group-item">Islam
                    <a href="/admin/category/1/edit" class="btn btn-secondary btn-sm ml-1">
                      <i class="nav-icon fas fa-pencil-alt"></i>
                    </a>
                    
                    <a href="/admin/category/1/delete" class="btn btn-danger btn-sm ml-1">
                      <i class="nav-icon fas fa-trash-alt"></i>
                    </a>
                  </li>
                  <li class="list-group-item">Career
                    <a href="/admin/category/1/edit" class="btn btn-secondary btn-sm ml-1">
                      <i class="nav-icon fas fa-pencil-alt"></i>
                    </a>

                    <a href="/admin/category/1/delete" class="btn btn-danger btn-sm ml-1">
                      <i class="nav-icon fas fa-trash-alt"></i>
                    </a>
                  </li>
                  <li class="list-group-item">Charity
                    <a href="/admin/category/1/edit" class="btn btn-secondary btn-sm ml-1">
                      <i class="nav-icon fas fa-pencil-alt"></i>
                    </a>
                    
                    <a href="/admin/category/1/delete" class="btn btn-danger btn-sm ml-1">
                      <i class="nav-icon fas fa-trash-alt"></i>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
<%- include('../partials/admin/footer'); %>
