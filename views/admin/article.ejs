<%- include('../partials/admin/header', {title: "Articles"}); %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Article</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Article</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          
          <% if (articleCreated.length > 0) { %>
            <div class="mx-5 col-lg-11 alert alert-warning alert-dismissible fade show" role="alert">
              <%= articleCreated %>

              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>
          
          <% if (articleDeleted.length > 0) { %>
            <div class="mx-5 col-lg-11 alert alert-warning alert-dismissible fade show" role="alert">
              <%= articleDeleted %>

              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>

          <% if (articleUpdated.length > 0) { %>
            <div class="mx-5 col-lg-11 alert alert-warning alert-dismissible fade show" role="alert">
              <%= articleUpdated %>

              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>

          <div class="col-lg-4">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <a href="/admin/article/add"><h5 class="m-0">Add New Article</h5></a>
              </div>
            </div>
          </div>
          <!-- /.col-md-6 -->
          <div class="col-lg-8">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h5 class="m-0">List of Article</h5>
              </div>
              <div class="card-body">
                <% if(articles.length > 0) { %>
                  <ul class="list-group list-group-flush">
                    
                    <% for(var i = 0; i < articles.length; i++) { %>
                      <li class="list-group-item form-inline">
                        <a href="/article/<%= articles[i].slug %>" class="card-link"><%= articles[i].title %></a>
                        <a href="/admin/article/<%= articles[i]._id %>/edit" class="btn btn-secondary btn-sm ml-1">
                          <i class="nav-icon fas fa-pencil-alt"></i>
                        </a>
                        
                        <a href="/admin/article/<%= articles[i]._id %>/delete" class="btn btn-danger btn-sm ml-1">
                          <i class="nav-icon fas fa-trash-alt"></i>
                        </a>
                      </li>
                    <% }  %>
                  </ul>
                <% } %>
                <% if(articles.length == 0) { %>
                  <p class="text-center text-danger text-bold">
                    No article created yet
                  </p>
                <% } %>

                <nav class="mt-2 float-right" aria-label="Article navigation">
                  <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
          <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
<%- include('../partials/admin/footer'); %>
